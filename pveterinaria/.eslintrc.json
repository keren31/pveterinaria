{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-restricted-globals": [
        "error",
        {
          "name": "self",
          "message": "El uso de 'self' es permitido en service workers."
        }
      ],
      "no-undef": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }